<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zwy.placard.dao.IPlacardDao">
  <resultMap type="com.zwy.placard.model.Placard" id="placardResultMap" extends="BaseBusLongEntity.entity">
    <!-- 公告标题 -->
    <result property="title" column="C_TITLE" />
    <!-- 公告内容 -->
    <result property="content" column="C_CONTENT" />
    
  </resultMap>

  <sql id="allColumnSql">
    o.ID,
    o.C_TITLE,
    o.C_CONTENT
  </sql>

  <sql id="searchConditionSql">
	  <if test="condition.title != null and condition.title != ''">
        AND o.C_TITLE like CONCAT('%',#{condition.title},'%')
	  </if>
	  <if test="condition.content != null and condition.content != ''">
        AND o.C_CONTENT like CONCAT('%',#{condition.content},'%')
	  </if>
  </sql>

  <select id="listPlacardAll" resultMap="placardResultMap">
    SELECT <include refid="allColumnSql"/>
    FROM placard o
  </select>

  <select id="listPlacardByPage" resultMap="placardResultMap">
    SELECT DISTINCT <include refid="allColumnSql"/>
    FROM placard o
    WHERE 1=1 <include refid="searchConditionSql"/>
  </select>

  <select id="listPlacardByCondition" resultMap="placardResultMap">
    SELECT DISTINCT <include refid="allColumnSql"/>
    FROM placard o
    WHERE 1=1 <include refid="searchConditionSql"/>
  </select>

  <select id="getPlacardById" resultMap="placardResultMap">
    SELECT <include refid="allColumnSql"/>
    FROM placard o
    WHERE o.ID = #{id}
  </select>

  <insert id="add" parameterType="com.zwy.placard.model.Placard" useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
    INSERT INTO placard
    (
    C_TITLE,
    C_CONTENT
    )
    VALUES
    (
     #{title},
     #{content}
    )
  </insert>

  <update id="update" parameterType="com.zwy.placard.model.Placard">
    UPDATE placard SET
    C_TITLE = #{title},
    C_CONTENT = #{content}
    WHERE ID = #{id}
  </update>

  <delete id="delByIds">
    DELETE FROM placard
    WHERE ID IN
    <foreach collection="array" index="index" item="item" open="(" separator="," close=")">
      #{item}
    </foreach>
  </delete>
</mapper>